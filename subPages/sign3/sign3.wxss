}


input {
  margin: 0 auto 10rpx;
  font-size: 34rpx;
  color: #9e9b9b;
  height: 75rpx;
  padding: 0 40rpx;
  width: 490rpx;
  background-color: rgb(247, 245, 255,.8);
  /* background-color: #f7f6fc; */
  box-shadow: 0px 3px 8px rgb(82, 78, 78), -2px 0 20px #ffffff;
  border-radius: 60rpx;
}

.stu {
  position: relative;
  width: 100%;
  /* text-align: center; */
}

.text-icon {
  position: absolute;
  top: 51rpx;
  right: 75rpx;
  font-size: 50rpx;
}

/* // 动画 */
.iconSuccess{
  animation-name: rotatel;
  animation-fill-mode: forwards;
  animation-duration: .6s;
  animation-timing-function: ease-in-out;
  /* color:#20ee5e !important; */
}
.iconFail{
  animation-name: rotater;
  animation-fill-mode: forwards;
  animation-duration: .6s;
  animation-timing-function: ease-in-out;
  /* color:#f51e1e !important; */
}

.icon-intro {
  top: 255rpx;
  right: 70rpx;
}

@keyframes rotater{
  0%{
    transform: rotate(0);
  }
  100%{
    transform: rotate(360deg);
  }
}
@keyframes rotatel{
  0%{
    transform: rotate(0);
  }
  100%{
    transform: rotate(-360deg);
  }
}


