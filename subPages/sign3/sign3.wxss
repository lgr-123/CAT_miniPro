  padding: 150rpx 75rpx 0 75rpx;
  width: 100%;
  height: 100%;
  /* text-align: center; */
}

.decorate {
  height: 245rpx;
  font-family: 'Comic Sans MS', cursive;
  font-size: 40rpx;
}

.decorate image {
  margin: 0 0 0 20px;
  /* margin: 0 auto; */
  width: 200rpx;
